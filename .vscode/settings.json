{
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "files.exclude": {
        "**/target": true
    },
    "java.configuration.updateBuildConfiguration": "automatic",
    "maven.terminal.favorites": [
        {
            "command": "clean verify",
            "debug": false
        },
        {
            "command": "clean install",
            "debug": false
        },
        {
            "command": "clean deploy",
            "debug": false
        },
        {
            "command": "release:prepare",
            "debug": false
        },
        {
            "command": "release:perform",
            "debug": false
        },
        {
            "command": "dependency:resolve  -Dclassifier=javadoc",
            "debug": false
        },
        {
            "command": "dependency:resolve  -Dclassifier=sources",
            "debug": false
        },
        {
            "command": "clean test site site:stage",
            "debug": false
        },
        {
            "command": "scm-publish:publish-scm",
            "debug": false
        }
    ],
    "maven.view": "hierarchical",
    "java.dependency.packagePresentation": "hierarchical",
    "java.dependency.syncWithFolderExplorer": true,
}